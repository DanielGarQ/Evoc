package co.edu.uco.evoc.crosscutting.utils;

public final class UtilTelefono {
	
	private static final UtilTelefono INSTANCE = new UtilTelefono();
	public static final String EMPTY = "";
	private static final String UUID_RE = "[+][0-9]{2}([0-9]{3}){2}[0-9]{4}";
	
	private UtilTelefono() {
		super();
	}
	
	public static final UtilTelefono getUtilTelefono() {
		return INSTANCE;
	}
	
	public final  boolean isNull(final String telefono) {
		return UtilObject.isNull(telefono);
	}
	
	public final String getDefault(final String telefono, final String defaultValue) {
		
		String result = telefono;
		
		if(isNull(telefono)) {
			result = isNull(defaultValue) ? EMPTY : defaultValue;
		}
		
		return result;
		
	}
	
	public final String getDefault(final String telefono) {
		return getDefault(telefono, EMPTY);
	}
	
	public final String getDefaultValue() {
		return EMPTY;
	}
	
	public final String applyTrim(final String telefono) {
		return getDefault(telefono).trim();
	}
	
	public final boolean matchPattern(final String text, final String pattern) {
		return getDefault(text).matches(getDefault(UUID_RE));
	}
}
